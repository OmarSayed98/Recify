<body  class="hpBody">
<%include ./Components/header.ejs %>
<div class="BlackslidersMainDivBackground firstSlider"  onmouseenter="sliderShowArrow(this)" onmouseleave="sliderHideArrow(this)">
    <div class="movieSelectionHeader">
        <div class="headerData" onmouseenter="sliderTitleHover(this)" onmouseleave="sliderTitleHoverExit(this)" onclick="showMore(this)">
            <h2 id='trenTitle' class="mshTitle">Action and Adventure</h2>
            <p id="trenShow" class="showMore">show more</p>
            <i class="fas fa-angle-right titleArrow" id="trenArrow"></i>
        </div>
    </div>

    <div class="carousel movieSelectionSlider"
         data-flickity='{"wrapAround": true ,"pageDots": false,"draggable": true, "cellAlign":"left"} '>
        <%action_adventure.forEach(movie=>{%>
        <%if(movie.imdbid!==null){%>
        <div class="carousel-cell">
            <a href="http://localhost:3000/movie?id=<%=movie.imdbid%>"><img src="<%=movie.poster_path%>"></a>
        </div>
        <%}%>
        <%})%>
    </div>
</div>

